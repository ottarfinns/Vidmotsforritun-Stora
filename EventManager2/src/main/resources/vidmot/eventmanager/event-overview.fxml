<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<fx:root styleClass="overview-pane" type="javafx.scene.layout.BorderPane" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">

    <padding>
        <Insets bottom="30" left="30" right="30" top="30" />
    </padding>

    <top>
        <VBox spacing="20">
            <Text style="-fx-font-size: 28px; -fx-font-weight: bold;" text="Yfirlit yfir viðburði" />

            <HBox alignment="CENTER_LEFT" spacing="15" styleClass="filter-box">
                <Label style="-fx-font-size: 14px; -fx-font-weight: bold;" text="Sía eftir flokki:" />
                <ComboBox fx:id="siaBox" prefWidth="250" />
                <Region HBox.hgrow="ALWAYS" />
            </HBox>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" />
         </padding>
        </VBox>
    </top>

    <center>
        <VBox spacing="15">
            <ListView fx:id="eventListView" VBox.vgrow="ALWAYS" />
        </VBox>
    </center>

    <bottom>
        <HBox alignment="CENTER" spacing="15">
            <Button fx:id="tilBakaButton" text="Til baka" />
            <Button fx:id="opnaButton" text="Opna valinn viðburð" />
            <Button fx:id="haettaButton" text="Hætta" />
         <padding>
            <Insets top="10.0" />
         </padding>
        </HBox>
    </bottom>
</fx:root>
